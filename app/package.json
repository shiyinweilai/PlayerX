{
  "name": "playerx",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "dist": "npm run build",
    "pack:win": "cross-env PLATFORM=win32 node pack.js",
    "pack:mac": "cross-env PLATFORM=darwin node pack.js",
    "bump": "node bump-version.js"
  },
  "keywords": [
    "video",
    "compare",
    "electron",
    "cross-platform"
  ],
  "author": "",
  "license": "ISC",
  "description": "A simple GUI to compare two videos using an external executable.",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.0.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.example.PlayerX",
    "productName": "PlayerX",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**",
      "!src/external/**"
    ],
    "extraResources": [
      {
        "from": "src/external/win-inner",
        "to": "win-inner",
        "filter": ["**/*"]
      },
      {
        "from": "src/external/mac-inner",
        "to": "mac-inner",
        "filter": ["**/*"]
      }
    ],
    "copyright": "Copyright Â© 2025 PlayerX",
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis",
      "executableName": "PlayerX"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PlayerX",
      "menuCategory": "Video Tools",
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false
    }
  }
}
